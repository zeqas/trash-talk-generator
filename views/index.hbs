<div class="container bg-light">
  <h1 class="title text-center text-info">想對誰說幹話?</h1>
  <form action="/" method="POST">
    <div class="card-deck">
      <div class="d-flex select-career-section justify-content-between mt-5">
      
      {{#each targets}}
      
      <div class="card">
        <label class="form-check-label" for="{{this.id}}">
          <img src="{{ this.img }}" class="card-img-top" alt="{{ this.title }}">
          <div class="card-body">
            <input class="form-check-input" type="radio" name="career" id="{{this.id}}" value="{{this.id}}">
            {{ this.title }}
          </div>
        </label>        
      </div>

      {{/each}}

    </div>

    <div class="container mt-4 generator-section d-flex">
      <button type="submit" class="btn btn-outline-danger generator-button align-self-start">產生幹話</button>
      <div class="ml-3 flex-grow-1">
        <textarea readonly class="form-control talkShit-display font-weight-bold" rows="3" aria-label="With textarea"
          style="font-size: larger;">{{#if talkShit}} {{ talkShit }} {{/if}}</textarea>
      </div>
    </div>

  </form>

</div>