<div class="container bg-light">
  <h1 class="title text-center text-info">想對誰說幹話?</h1>
  <form action="/" method="POST">
    <div class="card-deck justify-content-center">
      <div class="d-flex select-career-section justify-content-center mt-5">
      
      {{#each targets}}
      
      <div class="card">
        <label class="form-check-label" for="{{this.id}}">
          <img src="{{ this.img }}" class="card-img-top" alt="{{ this.title }}" style="width: 18rem; height: 14rem;">
          <div class="card-body ml-2">
            <input class="form-check-input" type="radio" name="career" id="{{this.id}}" value="{{this.id}}">
            {{ this.title }}
          </div>
        </label>        
      </div>

      {{/each}}

    </div>

    <div class="container mt-4 generator-section d-flex">
      <div class="ml-3 flex-grow-1">
        <textarea readonly class="form-control talkShit-display font-weight-bold" rows="3" aria-label="With textarea"
        style="font-size: larger;">{{#if talkShit}} {{ talkShit }} {{/if}}</textarea>
        <div class="d-flex flex-row-reverse mt-3">
          <button type="submit" class="btn btn-outline-danger generator-button" style="mt-3">產生幹話</button>
        </div>
      </div>
    </div>

  </form>

</div>